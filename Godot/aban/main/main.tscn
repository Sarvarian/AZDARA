script/source = "extends Node


func _ready() -> void:
	pass

func _process(_delta : float) -> void:
	pass


func _on_Game_second_pass() -> void:
	var timedate : PoolByteArray = $Game.get_timedate()
	var msg : String = \"{}/{}/{} {}:{}:{}\".format([
		timedate[5],
		timedate[4],
		timedate[3],
		timedate[2],
		timedate[1],
		timedate[0],
	], \"{}\")
	$CanvasLayer/Control/MarginContainer/HBoxContainer/VBoxContainer/TimeLabel.text = msg
	pass


func _on_HSlider_value_changed(value : float) -> void:
	$Game.set_game_speed(value)
	var msg : String = String(value)
	$CanvasLayer/Control/MarginContainer/HBoxContainer/VBoxContainer2/SpeedLabel.text = msg
	pass


func _on_ASecond_pressed() -> void:
	$Game.skip_time_a_second()
	pass


func _on_AMinute_pressed()-> void:
	for _i in range(60):
		_on_ASecond_pressed()
	pass


func _on_AnHour_pressed():
	for _i in range(60):
		_on_AMinute_pressed()
	pass

"

